# OpenAI API key for embeddings and LLM
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Use different models
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Local LLM configuration (alternative to OpenAI)
# Set these to use a local LLM server instead of OpenAI
LOCAL_LLM_URL=http://192.168.56.1:1234
LOCAL_LLM_MODEL=llm-jp-3.1-13b-instruct4

# Use local embeddings instead of OpenAI (optional)
USE_LOCAL_EMBEDDINGS=true